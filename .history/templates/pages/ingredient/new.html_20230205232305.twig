{% extends "base.html.twig" %}

{% block body %}

	<div class="container">
		<h1 class="mt-4">Création d'un ingrédient</h1>

		{{ form_start(form) }}
		<div class="form-error">
			{{ form_errors(form) }}
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.name) }}
                <input type="email" class="form-control" id="exampleInputEmail" aria-description="emailHelper">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>
			</div>
           
		</div>
		{{ form_end(form) }}
	</div>


{% endblock %}
